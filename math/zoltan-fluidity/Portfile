# $Id$

PortSystem	1.0

name		zoltan-fluidity
version     3.81
categories  math science
maintainers	jrper
description	Zoltan library.

conflicts 

platforms	darwin
homepage	http://www.cs.sandia.gov/zoltan/
master_sites	http://www.cs.sandia.gov/~kddevin/Zoltan_Distributions
distname	zoltan_distrib_v${version}
worksrcdir	Zoltan_v${version}
universal_variant   no

checksums           md5 e0587ac69dbc3b17d28f515ed0933719\
		    sha1 468c30db4b16cb16e5dde05fb951699e1e69527d

depends_lib-append  port:openmpi port:gcc47 port:petsc-fluidity

configure.env-append OMPI_CXX=${prefix}/bin/g++-mp-4.7
configure.env-append OMPI_CC=${prefix}/bin/gcc-mp-4.7
configure.env-append OMPI_FC=${prefix}/bin/gfortran-mp-4.7

configure.cc    mpicc
configure.cxx   mpicxx
configure.fc    mpif90
configure.f77   bin/mpif77

configure.compiler macports-gcc-4.7

build.env      OMPI_CXX=${prefix}/bin/g++-mp-4.7\
	       OMPI_CC=${prefix}/bin/gcc-mp-4.7\
	       OMPI_FC=${prefix}/bin/gfortran-mp-4.7

configure.cmd   mkdir ${worksrcpath}/build && cd ${worksrcpath}/build && ../configure
configure.args  x86_64-darwin-gnu\
		--enable-mpi\
		--with-mpi-compilers\
		--with-gnumake\
		--with-parmetis\
		--enable-f90interface\
                --enable-zoltan-cppdriver\
		--disable-examples\
		--with-parmetis-libdir=${prefix}/lib/petsc/lib\
		--with-parmetis-incdir=${prefix}/lib/petsc/include


build.dir ${worksrcpath}/build
build.jobs 1